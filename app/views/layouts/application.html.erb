<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="bg-dark container-fluid">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
         <a href="/" class="navbar-brand text-white mr-3">Bookers</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="list-unstyled">
                <%= link_to("Home", user_path(current_user.id), class: 'text-white mr-3') %>
              </li>
              <li class="list-unstyled">
                <%= link_to("Users", users_path, class: 'text-white mr-3') %>
              </li>
              <li class="list-unstyled">
                <%= link_to("Books", books_path, class: 'text-white mr-3') %>
              </li>
              <li class="list-unstyled">
                <%= link_to("Log out", destroy_user_session_path, method: :delete, class: 'text-white mr-3') %>
              </li>
            <% else %>
              <li class="list-unstyled">
                <%= link_to("Home", root_path, class: 'text-white mr-3') %>
              </li>
               <li class="list-unstyled">
                <%= link_to("About", homes_about_path, class: 'text-white mr-3') %>
              </li>
              <li class="list-unstyled">
                <%= link_to("Sign up", new_user_registration_path, class: 'text-white mr-3') %>
              </li>
              <li class="list-unstyled">
                <%= link_to("Log in", new_user_session_path, class: 'text-white mr-3 mr-3') %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>

    </header>
    

    <%= yield %>
    <footer style="margin-top:50px">
      <P class="text-center  mt-3">CopyRight Infratop.inc</P>
    </footer>
  </body>
</html>

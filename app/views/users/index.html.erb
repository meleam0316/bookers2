<%= render '/books/userinfo', book: @book,user: @user %>

<h2>Users</h2>

<table>
  <tr>

    <th>
      image
    </th>
    <th>
      name
    </th>
    <th>

    </th>
 </tr>

 <% @users.each do |user| %>
    <tr>
      <td>
          <% if user.image.attached? %>
            <%= image_tag user.image, size: "100x100" %>
          <% else %>
            <%= image_tag 'no_image', size: "100x100" %>
          <% end %>
      </td>
      <td> <%= user.name %></td>
      <td><%= link_to "Show",user_path(user.id) %></td>
    </tr>
  <% end %>

</table>
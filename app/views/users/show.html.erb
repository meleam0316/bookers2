<div class="text-dark">
  <%= flash[:notice] %>
</div>

<%= render '/books/userinfo', book: @book, user: @user %>

<h2>Books</h2>

<table>
  <tr>
    <th>

    </th>
    <th>
      Title
    </th>
    <th>
      Opinion
    </th>
 </tr>

 <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(book.user_id) do %>
          <% if book.user.image.attached? %>
            <%= image_tag book.user.image, size: "100x100" %>
          <% else %>
            <%= image_tag 'no_image', size: "100x100" %>
          <% end %>
        <% end %>
      </td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>

</table>
<div class="text-dark">
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">

  <div class="col-md-3">
    <%= render '/books/userinfo', book: @book, user: @user %>
  </div>

  <div class="offset-md-1 col-md-8">
    <h2>Books</h2>

    <table class ="table">
      <tr>
        <th>

        </th>
        <th>
          Title
        </th>
        <th>
          Opinion
        </th>
     </tr>

     <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user_id) do %>
              <% if book.user.profile_image.attached? %>
                <%= image_tag book.user.profile_image, size: "100x100" %>
              <% else %>
                <%= image_tag 'no_image', size: "100x100" %>
              <% end %>
            <% end %>
          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </table>
  </div>

 </div>
</div>
<div class="text-">
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'userinfo', book: @book_new,user: @user %>
    </div>

    <div class="offset-md-1 col-md-8">
      <h2>Book detail</h2>

      <table class ="table">

        <tr>
          <td>
            <%= link_to user_path(@book.user_id) do %>
              <% if @book.user.profile_image.attached? %>
                <%= image_tag @book.user.profile_image, size: "100x100" %>
              <% else %>
                <%= image_tag 'no_image', size: "100x100" %>
              <% end %><br>
              <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>

          <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: " btn btn-success" %>
            </td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :'delete', "data-confirm" => "本当に消しますか?", class: "btn btn-danger" %>
            </td>
          <% end %>
        </tr>
      </table>
    </div>

  </div>
</div>